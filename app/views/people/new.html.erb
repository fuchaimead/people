<div class='container'>
<h1>Add Person</h1>
<hr />
  <%= form_for @person do |f| %> 
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <br />
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br />
  <%= f.label :hair_color %>
  <%= f.select :hair_color, options_for_select(%w[blonde brown black red gray other]) %>
  <br />
  <%= f.label :eye_color %>
  <%= f.select :eye_color, options_for_select(%w[blue brown black green gray other])%>
  <br />
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br />
  <%= f.label :gender %>
  <%= f.select :gender, options_for_select(%w[female male other]) %>
  <br />
  <%= f.label :alive %>
  <%= f.select :alive, options_for_select(%w[yes no]) %>
  <br />
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <br />
  <%= f.label :favorite %>
  <%= f.check_box :favorite %>
  <%= f.submit class: 'btn btn-success' %> 
  <% end %>


<div class='action-buttons'>
<br />
  <%= link_to 'Cancel', people_path, class: 'btn btn-warning' %>
  <%= link_to 'All People', people_path, class: 'btn btn-success'%>
</div>
</div>
